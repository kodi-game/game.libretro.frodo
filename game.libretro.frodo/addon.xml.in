<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.frodo"
		name="Commodore - C64 (Frodo)"
		version="0.0.1.8"
		provider-name="Frodo Team Members">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>d64|t64|x64|p00|lnx|zip</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Commodore - C64 (Frodo) V4_2</summary>
		<description lang="en_GB">Frodo is a free and portable C64 emulator.

Supported files: .d64, .t64, .x64, .p00, .lnx, .zip</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.frodo</source>
	</extension>
</addon>
